formatVersion: 1
inputs:
  hostname:
    type: string
  imageSelect:
    type: string
    enum:
      - cloud-init
  application:
    type: string
    enum:
      - httpd
      - java
      - ansible
  cpuCount:
    type: integer
    default: 1
  memory:
    type: integer
    default: 1024
    enum:
      - 1024
      - 2048
      - 4096
resources:
  Cloud_Network_1:
    type: Cloud.vSphere.Network
    properties:
      networkType: existing
      constraints:
        - tag: 'net:web'
  Cloud_Machine_1:
    type: Cloud.vSphere.Machine
    properties:
      name: '${input.hostname}'
      image: '${input.imageSelect}'
      customizationSpec: centos
      cpuCount: '${input.cpuCount}'
      totalMemoryMB: '${input.memory}'
      networks:
        - network: '${resource.Cloud_Network_1.id}'
          assignment: static
